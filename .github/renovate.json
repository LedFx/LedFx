{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergeLinters"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "schedule": [
        "every month"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "schedule": [
        "every weekend"
      ]
    }
  ]
}
