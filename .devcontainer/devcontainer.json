{
  "name": "Python 3",
  "containerEnv": {
    "PULSE_SERVER": "${localEnv:PULSE_SERVER}",
  },
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      // Update 'VARIANT' to pick a Python version: 3, 3.6, 3.7, 3.8, 3.9
      "VARIANT": "3.9",
      // Options
      "INSTALL_NODE": "true",
      "NODE_VERSION": "lts/*",
      // User Options
      // "USERNAME": "ledfx"
    }
  },
  "runArgs": [
    "--network",
    "host",
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/ledfx-config.yml,target=/root/.ledfx/config.yaml,type=bind,consistency=cached"
  ],
  // Set *default* container specific settings.json values on container create.
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.pythonPath": "/ledfx/venv/bin/python",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/usr/local/py-utils/bin/black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/usr/local/py-utils/bin/flake8",
    "python.linting.pylintPath": "/usr/local/py-utils/bin/pylint",
    "python.sortImports.path": "isort",
    "restructuredtext.confPath": "${workspaceFolder}/docs",
    "restructuredtext.linter.name": "rstcheck",
    "restructuredtext.preview.fontSize": 12,
    "restructuredtext.preview.lineHeight": 1,
    "restructuredtext.sphinxBuildPath": "/ledfx/venv/bin/sphinx-build",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 4
    },
    "[python]": {
      "editor.tabSize": 4
    },
    "[restructuredtext]": {
      "editor.tabSize": 4,
    },
  },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "mgmcdermott.vscode-language-babel",
    "dbaeumer.vscode-eslint",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "lextudio.restructuredtext",
    "visualstudioexptteam.vscodeintellicode"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    8888,
    8000,
    5353,
    3002,
    3001,
    3000
  ],
  // "postCreateCommand": "sudo chown ledfx docs/_build; sudo chown ledfx docs/node_modules; sudo chown ledfx frontend/node_modules",
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "pip3 install --user -r requirements.txt; pip install -e .",
  // "postCreateCommand": "cd frontend; yarn: yarn install",
  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  //"remoteUser": "ledfx"
}